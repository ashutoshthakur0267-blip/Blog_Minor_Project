<style>
  /* ======== Navbar Styling ======== */
  .navbar {
    background-color: #212529 !important;
    padding: 0.8rem 1.5rem;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
  }

  .navbar-brand {
    font-weight: 600;
    font-size: 1.5rem;
    color: #ffffff !important;
    letter-spacing: 0.5px;
  }

  .navbar-toggler {
    border: none;
  }

  .nav-link {
    color: #dcdcdc !important;
    margin-right: 15px;
    font-weight: 500;
    transition: color 0.2s ease-in-out;
  }

  .nav-link:hover {
    color: #ffffff !important;
  }

  .nav-link.active {
    color: #0d6efd !important;
  }

  .navbar-nav .dropdown-menu {
    background-color: #343a40;
    border: none;
    border-radius: 8px;
    padding: 8px 0;
  }

  .dropdown-item {
    color: #dcdcdc;
    font-weight: 500;
    transition: background-color 0.2s ease-in-out;
  }

  .dropdown-item:hover {
    background-color: #495057;
    color: #ffffff;
  }

  .navbar-nav .nav-item {
    margin-right: 10px;
  }

  .alert {
    border-radius: 8px;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .navbar {
      padding: 1rem;
    }

    .nav-link {
      margin-right: 0;
      margin-bottom: 8px;
    }
  }
</style>

<nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark" data-bs-theme="dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Blogify</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
      data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown"
      aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavDropdown">

      <!-- ‚≠ê SEARCH BAR (Always Visible) -->
      <form action="/search" method="get" class="d-flex me-3 ms-auto">
        <input class="form-control form-control-sm" 
               type="search" 
               name="q" 
               placeholder="Search blogs..." 
               required>
      </form>

      <ul class="navbar-nav">

        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/">Home</a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/trending">üî• Trending</a>
        </li>

        <% if (user) { %>

          <li class="nav-item">
            <a class="nav-link" href="/blog/add-new">Add Blog</a>
          </li>

          <!-- User Dropdown -->
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button"
               data-bs-toggle="dropdown" aria-expanded="false">
              <%= user.fullname || "User" %>
            </a>

            <ul class="dropdown-menu dropdown-menu-end">
              <li><a class="dropdown-item" href="/bookmark/my">‚≠ê My Bookmarks</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="/user/logout">Logout</a></li>
            </ul>
          </li>

        <% } else { %>

          <li class="nav-item">
            <a class="nav-link" href="/user/signup">Create Account</a>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="/user/signin">Sign in</a>
          </li>

        <% } %>

      </ul>
    </div>
  </div>
</nav>

<!-- Show error if present -->
<% if (typeof error !== 'undefined' && error) { %>
  <div class="container mt-4">
    <div class="alert alert-danger text-center" role="alert">
      <%= error %>
    </div>
  </div>
<% } %>
