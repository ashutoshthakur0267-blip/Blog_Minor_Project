<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Search Results</title>
</head>

<body>
<%- include('./partials/nav') %>

<div class="container mt-4">
  <h3>Search Results for: "<%= query %>"</h3>

  <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
    <% if (blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <img src="<%= blog.coverImageURL %>" class="card-img-top" style="height:200px;object-fit:cover;">

            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>

              <small class="text-muted">
                ❤️ <%= blog.likes.length %> Likes
              </small><br>
              <small>By <%= blog.createdBy.fullname %></small><br>

              <a href="/blog/<%= blog._id %>" class="btn btn-primary btn-sm mt-2">Read</a>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="text-center mt-5">
        <h4>No results found.</h4>
      </div>
    <% } %>
  </div>
</div>

<%- include('./partials/scripts') %>
</body>
</html>
