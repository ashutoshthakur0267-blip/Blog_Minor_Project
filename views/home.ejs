<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>Homepage</title>

    <style>
        body {
            background-color: #f8f9fa;
            font-family: "Poppins", sans-serif;
        }

        .card {
            border: none;
            border-radius: 15px;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-6px);
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.15);
        }

        .card-img-top {
            height: 200px;
            object-fit: cover;
        }

        .card-title {
            font-weight: 600;
            color: #333;
        }

        .author-info img {
            border: 2px solid #dee2e6;
        }

        .author-info small {
            color: #6c757d;
            font-weight: 500;
        }

        .text-center h4 {
            color: #888;
            font-style: italic;
        }
    </style>
</head>

<body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">

        <!-- ⭐ CATEGORY FILTER (Added) -->
        <form action="/" method="get" class="mb-4">
            <select name="category" class="form-select" onchange="this.form.submit()">
                <option value="">All Categories</option>
                <option value="Technology" <%= category === "Technology" ? "selected" : "" %>>Technology</option>
                <option value="Lifestyle" <%= category === "Lifestyle" ? "selected" : "" %>>Lifestyle</option>
                <option value="Travel" <%= category === "Travel" ? "selected" : "" %>>Travel</option>
                <option value="Education" <%= category === "Education" ? "selected" : "" %>>Education</option>
                <option value="Sports" <%= category === "Sports" ? "selected" : "" %>>Sports</option>
                <option value="Food" <%= category === "Food" ? "selected" : "" %>>Food</option>
                <option value="Finance" <%= category === "Finance" ? "selected" : "" %>>Finance</option>
                <option value="Other" <%= category === "Other" ? "selected" : "" %>>Other</option>
            </select>
        </form>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% if (blogs && blogs.length > 0) { %>
                <% blogs.forEach(blog => { %>
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Cover">
                            <div class="card-body">
                                <h5 class="card-title"><%= blog.title %></h5>

                                <% if (blog.createdBy) { %>
                                    <div class="d-flex align-items-center mb-2 author-info">
                                        <img src="<%= blog.createdBy.profileImageURL %>"
                                             alt="Profile"
                                             width="30" height="30"
                                             class="rounded-circle me-2">
                                        <small>By <%= blog.createdBy.fullname %></small>
                                    </div>
                                <% } %>

                                <p class="text-muted small mb-2">
                                    ❤️ <%= blog.likes.length %> Likes
                                </p>

                                <a href="/blog/<%= blog._id %>" class="btn btn-primary btn-sm">View</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="text-center mt-5">
                    <h4>No blogs available yet.</h4>
                </div>
            <% } %>
        </div>
    </div>

    <%- include('./partials/scripts') %>
</body>
</html>
