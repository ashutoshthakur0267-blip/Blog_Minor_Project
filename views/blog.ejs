<!DOCTYPE html>
<html lang="en">

<head>
   <%- include("./partials/head") %>
      <title>
         <%= blog.title %> | Blogify
      </title>

      <style>
         body {
            background-color: #f8f9fa;
            font-family: "Poppins", sans-serif;
            color: #333;
         }

         .blog-container {
            background: #fff;
            border-radius: 12px;
            padding: 30px;
            margin-top: 40px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
         }

         .blog-container h1 {
            font-weight: 700;
            color: #212529;
            margin-bottom: 20px;
         }

         .blog-container img {
            width: 100%;
            max-width: 700px;
            border-radius: 10px;
            margin-bottom: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
         }

         .blog-body {
            white-space: pre-wrap;
            font-size: 1.1rem;
            line-height: 1.7;
            color: #444;
         }

         .author-info {
            margin-top: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
            justify-content: space-between;
         }

         .author-left {
            display: flex;
            align-items: center;
            gap: 10px;
         }

         .author-info img {
            border-radius: 50%;
            width: 50px;
            height: 50px;
            border: 2px solid #ddd;
         }

         .author-info span {
            font-weight: 600;
            color: #555;
         }

         /* Edit/Delete Buttons */
         .owner-actions {
            display: flex;
            gap: 10px;
         }

         .owner-actions .btn {
            border-radius: 8px;
            font-weight: 500;
         }

         /* ======== Comments Section ======== */
         .comments-container {
            background: #fff;
            border-radius: 12px;
            padding: 25px;
            margin-top: 40px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
         }

         .comments-container h1 {
            font-size: 1.5rem;
            font-weight: 600;
            color: #222;
            margin-bottom: 20px;
         }

         .comment-box {
            border-bottom: 1px solid #eee;
            padding: 10px 0;
         }

         .comment-box:last-child {
            border-bottom: none;
         }

         .comment-box img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
            border: 1px solid #ccc;
         }

         .comment-content {
            display: inline-block;
            vertical-align: middle;
            font-size: 0.95rem;
            color: #555;
         }

         .comment-form input {
            border-radius: 8px;
         }

         .comment-form button {
            border-radius: 8px;
            font-weight: 500;
         }

         /* Responsive */
         @media (max-width: 768px) {

            .blog-container,
            .comments-container {
               padding: 20px;
            }

            .blog-container img {
               max-width: 100%;
            }

            .author-info {
               flex-direction: column;
               align-items: flex-start;
               gap: 15px;
            }
         }
      </style>
</head>

<body>
   <%- include("./partials/nav") %>

      <div class="container">
         <div class="blog-container">
            <h1>
               <%= blog.title %>
            </h1>
            <p class="text-muted">üè∑Ô∏è Category: <strong><%= blog.category %></strong></p>

            <p class="text-muted">‚è≥ <%= blog.readingTime %> min read</p>
            <img src="<%= blog.coverImageURL %>" alt="Blog Image">
            <pre class="blog-body"><%= blog.body %></pre>

            <div class="author-info">
               <div class="author-left">
                  <img src="<%= blog.createdBy.profileImageURL %>" alt="Author Image">
                  <span>
                     <%= blog.createdBy.fullname %>
                  </span>
               </div>

               <% if (isOwner) { %>
                  <div class="owner-actions">
                     <a href="/blog/edit/<%= blog._id %>" class="btn btn-warning btn-sm">‚úèÔ∏è Edit</a>
                     <form action="/blog/delete/<%= blog._id %>" method="POST" style="display:inline;"
                        onsubmit="return confirm('Are you sure you want to delete this blog?');">
                        <button type="submit" class="btn btn-danger btn-sm">üóëÔ∏è Delete</button>
                     </form>
                  </div>
                  <% } %>
            </div>

            <!-- ‚úÖ Like Button -->
            <div class="mt-4 d-flex align-items-center gap-3">
               <button id="like-btn"
                  class="btn <%= blog.likes.includes(user ? user._id : '') ? 'btn-danger' : 'btn-outline-danger' %>">
                  ‚ù§Ô∏è Like (<span id="like-count">
                     <%= blog.likes.length %>
                  </span>)
               </button>
               <!-- ‚úÖ Bookmark Button -->
               <!-- ‚úÖ Bookmark Button (Added) -->
               <% if (user) { %>
                  <form action="/bookmark/add/<%= blog._id %>" method="POST" style="display:inline;">
                     <button class="btn btn-primary btn-sm">‚≠ê Bookmark</button>
                  </form>

                  <form action="/bookmark/remove/<%= blog._id %>" method="POST" style="display:inline;">
                     <button class="btn btn-outline-secondary btn-sm">‚ùå Remove Bookmark</button>
                  </form>
                  <% } %>
            </div>

         </div>
      </div>

      <div class="comments-container">
         <h1>Comments (<%= comments.length %>)</h1>

         <% if (locals.user) { %>
            <form class="comment-form" action="/blog/comment/<%= blog._id %>" method="post">
               <div class="mb-3">
                  <input type="text" name="content" class="form-control" placeholder="Enter your comment" required>
               </div>
               <button type="submit" class="btn btn-primary">Add Comment</button>
            </form>
            <% } %>

               <div class="mt-4">
                  <% comments.forEach(comment=> { %>
                     <div class="comment-box d-flex align-items-center">
                        <img src="<%= comment.createdBy.profileImageURL %>" alt="User">
                        <div class="comment-content">
                           <strong>
                              <%= comment.createdBy.fullname %>
                           </strong><br>
                           <%= comment.content %>
                        </div>
                     </div>
                     <% }) %>
               </div>
      </div>
      </div>

      <script>
         const likeBtn = document.getElementById("like-btn");
         const likeCount = document.getElementById("like-count");

         likeBtn?.addEventListener("click", async () => {
            const response = await fetch("/blog/<%= blog._id %>/like", {
               method: "POST",
               headers: { "Content-Type": "application/json" },
            });

            const data = await response.json();

            if (data.success) {
               likeCount.textContent = data.likesCount;
               likeBtn.classList.toggle("btn-danger", data.liked);
               likeBtn.classList.toggle("btn-outline-danger", !data.liked);
            } else {
               alert("Please login to like this post!");
            }
         });
      </script>

      <%- include("./partials/scripts") %>
</body>

</html>